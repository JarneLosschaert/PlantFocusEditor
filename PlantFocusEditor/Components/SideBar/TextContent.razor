@inject IJSRuntime JS

<article class="text-content">
    <h3>Basic text</h3>
    <div class="texts">
        <button class="text-header" @onclick="@(() => AddTextField(32))">
            Add a header
        </button>
        <button class="text-subheader" @onclick="@(() => AddTextField(24))">
            Add a subheader
        </button>
        <button class="text-paragraph" @onclick="@(() => AddTextField(16))">
            Add a paragraph
        </button>
    </div>
</article>

@code {
    private IJSObjectReference? module;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            module = await JS.InvokeAsync<IJSObjectReference>("import", "./js/modules/textLayers.js");
        }
    }

    async Task AddTextField(int size = 16)
    {
        if (module != null)
        {
            await module.InvokeVoidAsync("createTextLayer", size);
        }
    }
}
