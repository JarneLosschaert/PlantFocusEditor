<div class="color-input">
    <input type="text" @bind="fontColor" @oninput="HandleColorInput" maxlength="7" />
    <input type="color" @bind="fontColor" @oninput="HandleColorInput" />
</div>

@code {
    [Parameter]
    public string fontColor { get; set; }

    [Parameter]
    public EventCallback<string> handleColor { get; set; }
    
    [Parameter]
    public bool withLinearGradient { get; set; }

    private void HandleColorInput(ChangeEventArgs e)
    {
        string input = e.Value?.ToString()?.TrimStart('#').ToUpper();

        if (!input.StartsWith("#"))
        {
            input = "#" + input;
        }

        fontColor = input;
        handleColor.InvokeAsync(fontColor);
    }
}
